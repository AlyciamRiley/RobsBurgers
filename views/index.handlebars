<div class="container-fluid">
	<div class="row" id="header">
		{{> header }}
	</div>

	<div class="row" id="create">
		<h2>Create Your Burger!</h2>
		</div>
		<div class="row" id="form"> 
		<form class="create-form">

			<input type="text" id="ca" name="name" placeholder="Name your burger!">
		
		<button type="button" id="submit">Submit</button>
		</form>
	</div>


	<div class="row" id="status">
		<div class="col-md-6" id="uneaten">
			<h2>Uneaten Burgers</h2>
			<ul>
				{{#each burgers}} {{#unless devoured}} {{> burger-block devoured=true}} {{/unless}} {{/each}}
			</ul>
		</div>

		<div class="col-md-6" id="devoured">
			<h2>Devoured Burgers</h2>
			<ul>
				{{#each burgers}} {{#if devoured}} {{>burger-block devoured=false}} {{/if}} {{/each}}
			</ul>


		</div>
	</div>
</div>